---
import Layout from "../layouts/Layout.astro";
import FeatureSection from "../components/FeatureSection.jsx";

const projects = [
    {
        title: "The Harborne Renovation",
        category: "Heritage Restoration",
        image: "/hero.png",
        desc: "Complete structural reconfiguration of a 1920s property.",
    },
    {
        title: "Oakwood Heights",
        category: "New Build",
        image: "/hero.png",
        desc: "Luxury 5-bedroom eco-home with passive house standards.",
    },
    {
        title: "St. Peter's Extension",
        category: "Residential Extension",
        image: "/hero.png",
        desc: "Seamless glass-box kitchen extension adding 40sqm of living space.",
    },
    {
        title: "TechHub Offices",
        category: "Commercial",
        image: "/hero.png",
        desc: "Modern open-plan office fit-out within a listed building.",
    },
    {
        title: "Riverside Apartments",
        category: "Multi-Unit",
        image: "/hero.png",
        desc: "Development of 12 luxury apartments with underground parking.",
    },
    {
        title: "The Glass House",
        category: "Architectural Glazing",
        image: "/hero.png",
        desc: "Structurally complex structural glass installation.",
    },
];
---

<Layout title="Our Portfolio | Apex Construction">
    <main class="bg-gray-50">
        <!-- Hero -->
        <div
            class="relative isolate overflow-hidden bg-gray-900 py-24 sm:py-32"
        >
            <img
                src="/hero.png"
                alt=""
                class="absolute inset-0 -z-10 h-full w-full object-cover object-center brightness-25"
            />
            <div class="mx-auto max-w-7xl px-6 lg:px-8">
                <div class="mx-auto max-w-2xl lg:mx-0">
                    <h1
                        class="text-4xl font-bold tracking-tight text-white sm:text-6xl"
                    >
                        Our Portfolio
                    </h1>
                    <p class="mt-6 text-lg leading-8 text-gray-300">
                        A collection of our finest work. From award-winning new
                        builds to sensitive heritage restorations, we let our
                        craftsmanship speak for itself.
                    </p>
                </div>
            </div>
        </div>

        <!-- Project Grid -->
        <div class="py-24 sm:py-32">
            <div class="mx-auto max-w-7xl px-6 lg:px-8">
                <div
                    class="mx-auto grid max-w-2xl grid-cols-1 gap-x-8 gap-y-16 sm:gap-y-20 lg:mx-0 lg:max-w-none lg:grid-cols-3"
                >
                    {
                        projects.map((project) => (
                            <article class="flex flex-col items-start justify-between group cursor-pointer">
                                <div class="relative w-full">
                                    <img
                                        src={project.image}
                                        alt={project.title}
                                        class="aspect-[16/9] w-full rounded-2xl bg-gray-100 object-cover sm:aspect-[2/1] lg:aspect-[3/2] group-hover:opacity-90 transition-opacity ring-1 ring-gray-900/10"
                                    />
                                    <div class="absolute inset-0 rounded-2xl ring-1 ring-inset ring-gray-900/10" />
                                </div>
                                <div class="max-w-xl">
                                    <div class="mt-8 flex items-center gap-x-4 text-xs">
                                        <time
                                            datetime="2023-01-01"
                                            class="text-gray-500"
                                        >
                                            2023
                                        </time>
                                        <span class="relative z-10 rounded-full bg-gray-50 px-3 py-1.5 font-medium text-gray-600 hover:bg-gray-100">
                                            {project.category}
                                        </span>
                                    </div>
                                    <div class="group relative">
                                        <h3 class="mt-3 text-lg font-semibold leading-6 text-gray-900 group-hover:text-accent">
                                            <a href="#">
                                                <span class="absolute inset-0" />
                                                {project.title}
                                            </a>
                                        </h3>
                                        <p class="mt-5 line-clamp-3 text-sm leading-6 text-gray-600">
                                            {project.desc}
                                        </p>
                                    </div>
                                </div>
                            </article>
                        ))
                    }
                </div>
            </div>
        </div>

        <!-- CTA -->
        <div class="bg-white py-16 sm:py-24">
            <div class="mx-auto max-w-7xl px-6 lg:px-8">
                <div class="mx-auto max-w-2xl text-center">
                    <h2
                        class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl"
                    >
                        Like what you see?
                    </h2>
                    <p
                        class="mx-auto mt-6 max-w-xl text-lg leading-8 text-gray-600"
                    >
                        We bring this level of quality to every project we
                        undertake. Let's discuss how we can transform your
                        property.
                    </p>
                    <div class="mt-10 flex justify-center gap-x-6">
                        <a
                            href="/contact"
                            class="rounded-full bg-accent px-8 py-3.5 text-lg font-semibold text-white shadow-lg hover:bg-accent/90 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-accent transition-all"
                            >Start Your Project</a
                        >
                    </div>
                </div>
            </div>
        </div>
    </main>
</Layout>
