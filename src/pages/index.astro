---
import Layout from "../layouts/Layout.astro";
import TrustBar from "../components/TrustBar.jsx";
import Testimonials from "../components/Testimonials.jsx";
import FAQ from "../components/FAQ.jsx";
import SmartEstimator from "../components/SmartEstimator.jsx";
---

<Layout title="Apex Construction - Master Builders & Renovators">
	<main class="relative isolate overflow-hidden bg-white">
		<!-- Hero Section -->
		<div class="relative h-screen w-full overflow-hidden">
			<img
				src="/hero.png"
				alt="Architectural construction background"
				class="absolute inset-0 -z-10 h-full w-full object-cover object-center brightness-[0.4]"
			/>

			<div
				class="mx-auto max-w-7xl px-6 lg:px-8 h-full flex flex-col justify-center relative z-10"
			>
				<div class="max-w-2xl animate-fade-in-up">
					<div class="hidden sm:mb-8 sm:flex">
						<div
							class="relative rounded-full px-3 py-1 text-sm leading-6 text-gray-300 ring-1 ring-white/20 hover:ring-white/40 transition-all"
						>
							Federation of Master Builders <a
								href="#"
								class="font-semibold text-accent"
								><span
									class="absolute inset-0"
									aria-hidden="true"></span>See Profile <span
									aria-hidden="true">&rarr;</span
								></a
							>
						</div>
					</div>
					<h1
						class="text-5xl font-bold tracking-tight text-white sm:text-7xl mb-6 drop-shadow-lg"
					>
						Building Your Vision from the <span class="text-accent"
							>Ground Up</span
						>
					</h1>
					<p
						class="mt-6 text-lg leading-8 text-gray-200 drop-shadow-md"
					>
						Specialising in high-end residential extensions, new
						builds, and commercial restructuring. We deliver
						structural integrity with architectural beauty.
					</p>
					<div class="mt-10 flex items-center gap-x-6">
						<a
							href="#"
							class="rounded-full bg-accent px-8 py-3.5 text-lg font-semibold text-white shadow-lg hover:bg-accent/90 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-accent transition-all duration-300 scale-100 hover:scale-105"
						>
							Start Your Project
						</a>
						<a
							href="#"
							class="text-lg font-semibold leading-6 text-white hover:text-accent transition-colors"
						>
							View Portfolio <span aria-hidden="true">â†’</span>
						</a>
					</div>
				</div>
			</div>

			<!-- Glassmorphism Stats -->
			<div
				class="absolute bottom-0 left-0 right-0 bg-white/5 backdrop-blur-md border-t border-white/10 py-8"
			>
				<div
					class="mx-auto max-w-7xl px-6 lg:px-8 flex justify-around text-white text-center"
				>
					<div>
						<div class="text-3xl font-bold text-accent">200+</div>
						<div class="text-sm text-gray-300">New Builds</div>
					</div>
					<div>
						<div class="text-3xl font-bold text-accent">50+</div>
						<div class="text-sm text-gray-300">Awards</div>
					</div>
					<div>
						<div class="text-3xl font-bold text-accent">35y</div>
						<div class="text-sm text-gray-300">Excellence</div>
					</div>
				</div>
			</div>
		</div>

		<div class="relative z-20 bg-white"><TrustBar client:visible /></div>

		<!-- Services Preview Section -->
		<FeatureSection
			client:visible
			title="Building Your Legacy"
			subtitle="Structural Excellence"
			description="A home is more than bricks and mortar. It's where your family's future unfolds. We understand the responsibility of building your dream home, which is why we approach every project with unyielding attention to detail."
			features={builderFeatures}
			imageSrc="/hero.png"
			quote="The team at Apex didn't just build an extension, they transformed how we live as a family."
			author="The Mitchells, Herts"
			align="right"
		/>
	</main>

	<!-- Project Estimator Section -->
	<div class="py-24 bg-white relative">
		<div class="mx-auto max-w-7xl px-6 lg:px-8">
			<div class="mx-auto max-w-2xl text-center mb-16">
				<h2 class="text-base font-semibold leading-7 text-accent">
					Smart Project Estimator
				</h2>
				<p
					class="mt-2 text-3xl font-bold tracking-tight text-primary sm:text-4xl"
				>
					Instantly Check Project Feasibility
				</p>
				<p class="mt-4 text-lg text-gray-500">
					Answer 5 quick questions to get a ball-park timeline and
					viability check.
				</p>
			</div>
			<SmartEstimator client:visible />
		</div>
	</div>

	<Testimonials client:visible />
	<FAQ client:visible />
</Layout>
