---
import Layout from "../layouts/Layout.astro";
import TrustBar from "../components/TrustBar.jsx";
import Testimonials from "../components/Testimonials.jsx";
import FAQ from "../components/FAQ.jsx";
import SmartEstimator from "../components/SmartEstimator.jsx";
import FeatureSection from "../components/FeatureSection.jsx";
import ServiceAreaMap from "../components/ServiceAreaMap.jsx";
import ProcessFlow from "../components/ProcessFlow.jsx";
import SafetyGuarantee from "../components/SafetyGuarantee.jsx";

const builderFeatures = [
	{
		title: "Architectural Precision",
		desc: "We work directly with your architect to ensure structural integrity matches the vision.",
	},
	{
		title: "Project Management",
		desc: "Dedicated site manager for every build, keeping your project on time and budget.",
	},
	{
		title: "Master Warranty",
		desc: "10-year structural warranty on all new builds and extensions.",
	},
];
---

<Layout title="Apex Construction - Master Builders & Renovators">
	<main class="relative isolate overflow-hidden bg-white">
		<!-- Hero Section -->
		<div class="relative h-screen w-full overflow-hidden">
			<img
				src="/hero.png"
				alt="Architectural construction background"
				class="absolute inset-0 -z-10 h-full w-full object-cover object-center brightness-[0.4]"
			/>

			<div
				class="mx-auto max-w-7xl px-6 lg:px-8 h-full flex flex-col justify-center relative z-10"
			>
				<div class="max-w-3xl animate-fade-in-up">
					<div class="hidden sm:mb-8 sm:flex">
						<div
							class="relative rounded-full px-3 py-1 text-sm leading-6 text-gray-300 ring-1 ring-white/20 hover:ring-white/40 transition-all uppercase tracking-wide font-semibold"
						>
							Federation of Master Builders ‚Ä¢ Fully Insured
						</div>
					</div>
					<h1
						class="text-5xl font-bold tracking-tight text-white sm:text-7xl mb-6 drop-shadow-lg"
					>
						Building Your Vision From The <span class="text-accent"
							>Ground Up</span
						>
					</h1>
					<p
						class="mt-6 text-xl leading-8 text-gray-200 drop-shadow-md max-w-2xl"
					>
						From architectural new builds to transformative
						extensions. We combine structural integrity with design
						excellence to create spaces that define luxury living.
					</p>
					<div class="mt-10 flex flex-wrap items-center gap-6">
						<a
							href="/contact"
							class="rounded-full bg-accent px-8 py-3.5 text-lg font-semibold text-white shadow-lg hover:bg-accent/90 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-accent transition-all duration-300 scale-100 hover:scale-105"
						>
							Start Your Project
						</a>
						<a
							href="/portfolio"
							class="rounded-full bg-white/10 backdrop-blur-sm border border-white/20 px-8 py-3.5 text-lg font-semibold text-white hover:bg-white hover:text-primary transition-all duration-300"
						>
							View Our Portfolio <span aria-hidden="true">‚Üí</span>
						</a>
					</div>
				</div>
			</div>

			<!-- Glassmorphism Stats -->
			<div
				class="absolute bottom-0 left-0 right-0 bg-white/5 backdrop-blur-md border-t border-white/10 py-8"
			>
				<div
					class="mx-auto max-w-7xl px-6 lg:px-8 flex justify-around text-white text-center"
				>
					<div>
						<div class="text-3xl font-bold text-accent">200+</div>
						<div class="text-sm text-gray-300">New Builds</div>
					</div>
					<div>
						<div class="text-3xl font-bold text-accent">50+</div>
						<div class="text-sm text-gray-300">Industry Awards</div>
					</div>
					<div>
						<div class="text-3xl font-bold text-accent">35y</div>
						<div class="text-sm text-gray-300">Of Excellence</div>
					</div>
				</div>
			</div>
		</div>

		<!-- TrustBar -->
		<div class="relative z-20 bg-white">
			<TrustBar
				client:visible
				items={[
					{
						title: "End-to-End Mgmt",
						subtitle: "We handle logistics",
						icon: null,
						colorClass: "text-blue-500",
					},
					{
						title: "Fixed-Price",
						subtitle: "Transparent Billing",
						icon: null,
						colorClass: "text-green-500",
					},
					{
						title: "Master Builders",
						subtitle: "Fully Accredited",
						icon: null,
						colorClass: "text-yellow-500",
					},
				]}
			/>
		</div>

		<!-- Why Apex Section (Value Prop) -->
		<FeatureSection
			client:visible
			title="Master Craftsmanship. Managed Professionally."
			subtitle="Why Apex?"
			description="Construction shouldn't be chaotic. At Apex, we bring order to the build process. We bridge the gap between your architect‚Äôs drawings and the final coat of paint, ensuring every phase is delivered on time, on budget, and to the highest standard."
			features={[
				{
					title: "Luxury New Builds",
					desc: "We turn empty plots into landmark properties. Working alongside the region's top architects.",
				},
				{
					title: "High-End Extensions",
					desc: "Seamlessly integrate open-plan living areas and multi-story additions.",
				},
				{
					title: "Commercial Restructuring",
					desc: "Office fit-outs and structural alterations designed to maximize potential.",
				},
			]}
			imageSrc="/hero.png"
			quote="The team at Apex didn't just build an extension, they transformed how we live as a family."
			author="The Mitchells, Herts"
			align="right"
		/>

		<!-- Featured Project Spotlight (New Section) -->
		<div class="py-24 bg-gray-900 text-white relative overflow-hidden">
			<img
				src="/hero.png"
				class="absolute inset-0 opacity-10 object-cover w-full h-full"
			/>
			<div class="mx-auto max-w-7xl px-6 lg:px-8 relative z-10">
				<div class="flex flex-col lg:flex-row gap-16 items-center">
					<div class="lg:w-1/2">
						<div
							class="inline-block rounded-full bg-accent/20 px-4 py-1 text-sm font-semibold text-accent mb-6 border border-accent/20"
						>
							Project Spotlight
						</div>
						<h2
							class="text-4xl font-bold tracking-tight text-white mb-6"
						>
							The Harborne Renovation
						</h2>
						<p class="text-xl text-gray-300 mb-8 font-light">
							A complete structural reconfiguration and
							double-story extension for a 1920s heritage
							property.
						</p>

						<div class="space-y-6">
							<div>
								<h4 class="font-bold text-white text-lg">
									The Brief
								</h4>
								<p class="text-gray-400">
									Create an open-plan family living space
									while preserving the property's period
									character.
								</p>
							</div>
							<div>
								<h4 class="font-bold text-white text-lg">
									The Challenge
								</h4>
								<p class="text-gray-400">
									Complex steelwork requirements and tight
									planning restrictions.
								</p>
							</div>
							<div>
								<h4 class="font-bold text-white text-lg">
									The Result
								</h4>
								<p class="text-gray-400">
									A seamless blend of contemporary glass and
									traditional brickwork, delivered 2 weeks
									ahead of schedule.
								</p>
							</div>
						</div>

						<div class="mt-10">
							<a
								href="#"
								class="text-white font-semibold border-b border-accent hover:text-accent transition-colors pb-1"
								>View Full Case Study &rarr;</a
							>
						</div>
					</div>
					<div class="lg:w-1/2">
						<div
							class="rounded-2xl overflow-hidden ring-1 ring-white/10 shadow-2xl"
						>
							<img
								src="/hero.png"
								alt="Harborne Renovation"
								class="w-full h-auto object-cover hover:scale-105 transition-transform duration-700"
							/>
						</div>
					</div>
				</div>
			</div>
		</div>

		<ProcessFlow
			client:visible
			title="Your Dream Home, Delivered"
			subtitle="The Apex 4-Step Method"
			steps={[
				{
					title: "Consultation & Quote",
					desc: "Detailed, itemized breakdown via our client portal.",
				},
				{
					title: "Pre-Construction",
					desc: "Site setup, H&S compliance, and schedule management.",
				},
				{
					title: "The Build",
					desc: "Regular digital updates and photo logs every week.",
				},
				{
					title: "Handover",
					desc: "Spotless finish, full warranty, and building control sign-off.",
				},
			]}
		/>

		<!-- Apex Guarantee Section (New) -->
		<div class="py-24 bg-stone-50">
			<div class="mx-auto max-w-7xl px-6 lg:px-8">
				<div class="mx-auto max-w-2xl text-center mb-16">
					<h2 class="text-base font-semibold leading-7 text-accent">
						Risk Reversal
					</h2>
					<p
						class="mt-2 text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl"
					>
						Our Guarantee: Built on Integrity
					</p>
					<p class="mt-4 text-lg text-gray-600">
						We don't cut corners. Every Apex project is backed by
						our rock-solid workmanship guarantee and full insurance
						coverage.
					</p>
				</div>

				<div class="grid md:grid-cols-3 gap-8 text-center">
					<div
						class="bg-white p-8 rounded-2xl shadow-sm border border-gray-100"
					>
						<div
							class="mx-auto h-12 w-12 text-accent mb-4 font-bold text-2xl flex items-center justify-center bg-accent/10 rounded-full"
						>
							¬£
						</div>
						<h3 class="font-bold text-gray-900 mb-2">
							Fully Insured
						</h3>
						<p class="text-gray-500 text-sm">
							¬£10m Public Liability and Employers' Liability cover
							for total peace of mind.
						</p>
					</div>
					<div
						class="bg-white p-8 rounded-2xl shadow-sm border border-gray-100"
					>
						<div
							class="mx-auto h-12 w-12 text-accent mb-4 font-bold text-2xl flex items-center justify-center bg-accent/10 rounded-full"
						>
							üìù
						</div>
						<h3 class="font-bold text-gray-900 mb-2">
							JCT Contracts
						</h3>
						<p class="text-gray-500 text-sm">
							Industry-standard contracts so everyone knows
							exactly where they stand.
						</p>
					</div>
					<div
						class="bg-white p-8 rounded-2xl shadow-sm border border-gray-100"
					>
						<div
							class="mx-auto h-12 w-12 text-accent mb-4 font-bold text-2xl flex items-center justify-center bg-accent/10 rounded-full"
						>
							10
						</div>
						<h3 class="font-bold text-gray-900 mb-2">
							10-Year Warranty
						</h3>
						<p class="text-gray-500 text-sm">
							All structural works are covered for a decade,
							giving you long-term security.
						</p>
					</div>
				</div>
			</div>
		</div>

		<!-- Service Area Map Section -->
		<div class="py-24 bg-white">
			<div class="mx-auto max-w-7xl px-6 lg:px-8">
				<div class="mx-auto max-w-2xl text-center mb-16">
					<h2 class="text-base font-semibold leading-7 text-accent">
						Local Coverage
					</h2>
					<p
						class="mt-2 text-3xl font-bold tracking-tight text-primary sm:text-4xl"
					>
						Serving Hertfordshire & North London
					</p>
					<p class="mt-4 text-lg text-gray-500">
						Top-tier construction projects across St Albans,
						Harpenden, and beyond.
					</p>
				</div>
				<ServiceAreaMap
					client:only="react"
					center={[51.752, -0.3397]}
					city="St Albans"
					radiusMiles={20}
				/>
			</div>
		</div>

		<!-- Project Estimator Section -->
		<div class="py-24 bg-stone-50 relative">
			<div class="mx-auto max-w-7xl px-6 lg:px-8">
				<div class="mx-auto max-w-2xl text-center mb-16">
					<h2 class="text-base font-semibold leading-7 text-accent">
						Smart Project Estimator
					</h2>
					<p
						class="mt-2 text-3xl font-bold tracking-tight text-primary sm:text-4xl"
					>
						Instantly Check Project Feasibility
					</p>
					<p class="mt-4 text-lg text-gray-500">
						Answer 5 quick questions to get a ball-park timeline and
						viability check.
					</p>
				</div>
				<SmartEstimator client:visible />
			</div>
		</div>

		<Testimonials
			client:visible
			reviews={[
				{
					text: "Our architect warned us that the cantilever design would be tricky, but Apex handled the structural engineering effortlessly. The team was polite, the site was always tidy, and the finish is showroom quality.",
					author: "The Harrison Family",
					location: "St. Albans",
					role: "New Build",
					rating: 5,
				},
				{
					text: "We've renovated three properties, and Apex is the first firm to actually stick to the schedule. Their project management app kept us in the loop the whole time. Highly recommended.",
					author: "James & Claire",
					location: "Harpenden",
					role: "Double Story Extension",
					rating: 5,
				},
				{
					text: "Professional from the first quote to final handover. The transparent billing meant we always knew where the budget was going.",
					author: "Marcus T.",
					location: "Watford",
					role: "Commercial Fit-out",
					rating: 5,
				},
			]}
		/>

		<!-- CTA Section -->
		<div class="bg-gray-900 py-16 sm:py-24">
			<div class="mx-auto max-w-7xl px-6 lg:px-8">
				<div class="mx-auto max-w-2xl text-center">
					<h2
						class="text-3xl font-bold tracking-tight text-white sm:text-4xl"
					>
						Ready to break ground?
					</h2>
					<p
						class="mx-auto mt-6 max-w-xl text-lg leading-8 text-gray-300"
					>
						Whether you have planning permission approved or are
						just exploring the possibilities, let‚Äôs discuss your
						project.
					</p>
					<div class="mt-10 flex justify-center gap-x-6">
						<a
							href="/contact"
							class="rounded-full bg-accent px-8 py-3.5 text-lg font-semibold text-white shadow-lg hover:bg-accent/90 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-accent transition-all"
							>Book a Site Consultation</a
						>
					</div>
				</div>
			</div>
		</div>

		<FAQ client:visible />
	</main>
</Layout>
```

